
<div class="container-fluid text-light" style="padding-top:15vh; padding-bottom:10vh;">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <h1 class="text-center p-2 mt-4 fontMalisemibold600">{{mensaje}}</h1>
             {{#each data}}
             <form action="/shows/modificar/{{id}}" method="post" enctype="multipart/form-data">
                <div class="form-group my-3">
                    <label for="formGroupExampleInput">Nombre</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ingrese su nombre" name="nombre" value="{{nombre}}">
                </div>
                <div class="form-group my-3">
                    <label for="formGroupExampleInput2">Fecha</label>
                    <input type="date" class="form-control" id="formGroupExampleInput2" placeholder="Ingrese la fecha del show" name="fecha" value="{{fecha}}">
                </div>
                <div class="form-group my-3">
                    <label for="formGroupExampleInput3">Descripción</label>
                    <input type="text" class="form-control" id="formGroupExampleInput3" placeholder="Ingrese la descripción del show" name="descripcion" value="{{descripcion}}">
                </div>

                <div class="form-group my-3">
                    <label for="exampleFormControlFile1">Imagen</label>
                    <input type="file" class="form-control" id="exampleFormControlFile1" name="img">
                    <label for="" class="mt-2">{{img}}</label>
                    <img src="{{img}}" class="mt-2" style="width: 100%;" alt="" id="imagenProbando"> 
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-secondary btn-block mt-5">Modificar+{{id}}</button>

                    <a href="/shows/listado" class="btn btn-secondary btn-block mt-4">Retornar</a>
                </div>
            </form>   
             {{/each}}  
        </div>
    </div>
</div>
<script>
    let archivo = document.getElementById("exampleFormControlFile1");
    let imagen = document.getElementById("imagenProbando");
    let file;
    archivo.addEventListener("change",function(){
        file = archivo.files[0];
        if(file){
            const fileReader = new FileReader();
            fileReader.addEventListener("load",function(){
                imagen.setAttribute("src",fileReader.result);
            })
            fileReader.readAsDataURL(file);
        }    
    })
</script>
