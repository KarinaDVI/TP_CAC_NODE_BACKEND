<div class="container-fluid bg-dark" style="height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

             <form action="/shows/ingreso/" method="post" enctype="multipart/form-data">
                <div class="form-group my-3">
                    <label for="formGroupExampleInput">Nombre</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ingrese su nombre" name="nombre">
                </div>
                <div class="form-group my-3">
                    <label for="formGroupExampleInput2">Fecha</label>
                    <input type="date" class="form-control" id="formGroupExampleInput2" placeholder="Ingrese la descripción del show" name="fecha">
                </div>
                <div class="form-group my-3">
                    <label for="formGroupExampleInput2">Descripción</label>
                    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Ingrese la descripción del show" name="descripcion">
                </div>

                <div class="form-group my-3">
                    <label for="exampleFormControlFile1">Imagen</label>
                    <input type="file" class="form-control" id="exampleFormControlFile1" name="img"> 
                </div>

  
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-secondary btn-block mt-5">Agregar</button>

                    <a href="/shows/listado" class="btn btn-secondary btn-block mt-4">Retornar</a>
                </div>
            </form>   
        </div>
    </div>
</div>