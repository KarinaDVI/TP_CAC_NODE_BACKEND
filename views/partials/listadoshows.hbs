<div class="container">

    <form class="row  m-4" role="search" method="get" action="/shows/listado/">
        <input class="col form-control ms-3" type="search" placeholder="id..." aria-label="Search" id="id" name="id">
        <button class="col btn btn-primary" type="submit">Buscar</button>

        <div class="col-4"></div>a
        <a href="/shows/alta/" class="col-3 btn btn-success me-3">Agregar Show</a>
    </form>

    <div class="row" >
        <div class="col">

            <table class="table table-hover table-striped table-bordered table-light">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>fecha</th>
                        <th>Imagen</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>

                <tbody>

                    {{#each data}}   
                    <tr>
                       <td>{{id}}</td>
                       <td>{{nombre}}</td>
                       <td>{{descripcion}}</td>
                        <td>{{fecha}}</td>
                        <td style="width: 20%;"><img src="{{img}}" alt="Imagen del diseño" style="width: 100%;"></td>
                       
                       <td><a href="/shows/modificar/{{id}}" class="btn btn-primary">Editar</a></td>
                       <td><a href="/shows/eliminar/{{id}}" class="btn btn-danger">Eliminar</a></td> 
                    </tr>
                    {{/each}}

                </tbody>


            </table>


        </div>
    </div>


    <div class="row">
        <div class="col">
    <div class="row justify-content-center">
        <div class="col-8 d-flex justify-content-center">


            <div class="d-grid gap-2 col-6 mx-auto pb-5">
                <a href="/" class="btn btn-secondary" type="button">Retornar</a>
            </div>

        </div>
    </div>




        </div>
    </div>
</div>