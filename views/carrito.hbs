<div class="container mt-4">
    <h2 class="text-light mt-5 mb-2 ">{{mensaje}}</h2>
    <div class="row justify-content-center text-center m-2">
        {{#each data}} 
        <div class="col-lg-3 col-md-4 col-sm-6 col-12 my-2">
            <div class="ticketImage">
                <img src="{{img}}"
                    alt="" class="" style="max-height:200px;">
            </div>
            <div class="ticket-sales-container">
                <form action="/carrito/comprar/{{id}}" method="post" 
                    class="d-block" enctype="multipart/form-data">
                    <input type="hidden" name="">
                    <label for="" >{{nombre}}</label><br>
                    <label for="ticket-quantity">Numero de Entradas:</label>
                    {{!-- <input type="number" name="cantidad"> --}}
                    <select id="ticket-quantity1" name="cantidad" aria-selected="true">
                        <option selected>5</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                    </select>
                    <input type="number" name="precio" disabled value="{{precio}}">
                    <button type="submit" class="add-to-cart">Agregar al carrito</button>
                </form>
            </div>
            
        </div>
        {{/each}}
          <div class="m-auto my-3 pb-5">
                <a href="/" class="btn btn-secondary" type="button">Retornar</a>
                <a href="/user">Ver compras</a>
            </div>

    </div>
</div>