<div class="container mt-4">
    <h2 class="text-light mt-5 mb-2 ">{{mensaje}}</h2>
    <div class="row justify-content-center text-center m-2">
        {{#each data}} 
        <div class="col-lg-3 col-md-4 col-sm-6 col-12 my-2">
            <div class="ticketImage">
                <img src="{{img}}"
                    alt="" class="" style="max-height:200px;">
            </div>
            <div class="ticket-sales-container">
                <form action="/carrito/comprar/{{id}}" method="post" 
                class="d-block" enctype="multipart/form-data">
                <label for="" >{{nombre}}</label><br>
                <label for="ticket-quantity">Numero de Entradas:</label>
                <select id="ticket-quantity1" name="cantidad">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                </select>
                <button class="add-to-cart" type="submit">Agregar al carrito</button>
                
            </div>
            </form>
        </div>
        {{/each}}
          <div class="m-auto my-3 pb-5">
                <a href="/" class="btn btn-secondary" type="button">Retornar</a>
            </div>
    </div>
</div>