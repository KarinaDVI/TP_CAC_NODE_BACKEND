{{>header}}
<div class="container-fluid dashboard d-block justify-content-center align-items-center vh-80 ">
    <h2 class="text-light text-center">{{mensaje}}</h2>
    <div class="row justify-content-center align-content-center">
        <div class="col">
            <table class="table table-hover table-striped table-bordered table-light">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Fecha</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                        <th>Total</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}   
                    <tr class="text-center">
                        <td>{{id}}</td>
                        <td>{{nombre}}</td>
                        <td>{{fecha}}</td>
                        <td>{{cantidad}}</td>
                        <td>{{precio}}</td>
                        <td>{{total}}</td> 
                        <form action="/user/finalizar/{{id}}" method="post">
                        {{!-- <input type="hidden" name="id_fin" value="{{id}}"> --}}
                            <td><button type="submit" class="btn btn-primary">Finalizar compra</button></td>
                        </form>
                        <form action="/user/cancelar/{{id}}" method="post">
                        {{!-- <input type="hidden" name="id_cancel" value="{{id}}"> --}}
                            <td><button type="submit" class="btn btn-danger">Cancelar Compra</button></td> 
                        </form>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-center align-content-center">
        <button class="d-block button text-center"><a href="/" class="" type="button">Volver</a></button>
    </div>
</div>
{{>footer}}