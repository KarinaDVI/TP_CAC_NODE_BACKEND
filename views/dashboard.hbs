{{>header}}
    <div class="container-fluid d-flex justify-content-center mt-5 vh-100">
        <h2>{{mensaje}}</h2>
            <div class="row justify-content-center align-content-center" >
                <form action="/user/finalizar/" method="post" enctype="multipart/form-data"></form> 
                    <div class="col">

                        <table class="table table-hover table-striped table-bordered table-light">
                            <thead>
                                <tr class="text-center">
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>fecha</th>
                                    <th>cantidad</th>
                                    <th>precio</th>
                                    <th>total</th>
                                </tr>
                            </thead>

                            <tbody>

                                {{#each compras}}   
                                <tr>
                                <td>{{id}}</td>
                                <td>{{nombre}}</td>
                                <td>{{fecha}}</td>
                                <td>{{cantidad}}</td>
                                <td>{{precio}}</td>
                                <td>{{total}}</td> 
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                    <button type="submit" class="d-block add-to-cart w-25 text-center">Finalizar compra</button>
                </form>
            </div>
        </div>

    </div>
{{>footer}}